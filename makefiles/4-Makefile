CC = gcc
NAME = school
SRC = main.c $(NAME).c                                                                                                                           
OBJ = $(SRC:.c=.o)
RM := rm -f *~
CFLAGS = -Wall -Werror -Wextra -pedantic
all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)
clean:
	$(RM)
oclean:
	clean $(OBJ)
fclean:
	clean $(OBJ)
re:
	clean $(CC) $(OBJ) $(CFLAGS)
